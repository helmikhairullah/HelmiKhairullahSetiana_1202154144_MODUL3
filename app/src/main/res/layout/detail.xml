<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.helmikhairullah.helmikhairullahsetiana_1202154144_modul3.HelmiKhairullahSetiana_1202154144_Modul3">

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:text="judul"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/penjelasan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleDetail"
            android:text="penjelasan"/>

        <ImageView
            android:id="@+id/airLevel"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/penjelasan1"
            android:src="@drawable/ic_battery_20_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/btnPlus"
            android:src="@drawable/ic_tambah"
            android:layout_below="@id/airLevel"
            android:layout_toEndOf="@+id/airLevel"
            android:layout_toRightOf="@id/airLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addLevel"/>

        <TextView
            android:id="@+id/hitunganIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_below="@id/airLevel"
            android:layout_centerHorizontal="true"
            android:text="1L" />

        <ImageView
            android:id="@+id/btnMinus"
            android:src="@drawable/ic_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/airLevel"
            android:layout_toLeftOf="@id/airLevel"
            android:onClick="decreaseLevel"/>
    </RelativeLayout>

</ScrollView>